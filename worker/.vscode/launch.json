{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Worker",
      "type": "debugpy",
      "request": "launch",
      "module": "worker.main", 
      "justMyCode": false
    },
    {
      "name": "Attach to Worker Process",
      "type":"debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/src/worker",
          "remoteRoot": "/opt/app/src/worker"
        }
      ],
      "justMyCode": false
    }
  ]
}