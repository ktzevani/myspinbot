{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug ComfyUI",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "args": [
        "--listen",
        "0.0.0.0",
        "--port",
        "8188",
        "--disable-auto-launch"
      ],
      "justMyCode": false
    },
    {
      "name": "Attach to ComfyUI Process",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5679
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/opt/comfyui"
        }
      ],
      "justMyCode": false
    }
  ]
}