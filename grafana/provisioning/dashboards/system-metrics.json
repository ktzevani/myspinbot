{
  "id": null,
  "uid": "sys-metrics",
  "title": "MySpinBot System & GPU Metrics",
  "schemaVersion": 39,
  "version": 1,
  "tags": ["infrastructure", "monitoring"],
  "refresh": "10s",
  "timezone": "browser",
  "panels": [
    {
      "type": "row",
      "title": "System Overview",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Uptime (Prometheus)",
      "targets": [{ "expr": "time() - process_start_time_seconds{job=\"prometheus\"}", "refId": "A" }],
      "unit": "s",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 }
    },
    {
      "type": "gauge",
      "title": "CPU Usage (%)",
      "targets": [{ "expr": "100 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[1m])) * 100", "refId": "A" }],
      "max": 100,
      "min": 0,
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "orange", "value": 75 }, { "color": "red", "value": 90 }] }
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 }
    },
    {
      "type": "gauge",
      "title": "Memory Usage (%)",
      "targets": [{ "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100", "refId": "A" }],
      "max": 100,
      "min": 0,
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 }
    },
    {
      "type": "gauge",
      "title": "Disk Usage (%)",
      "targets": [{ "expr": "(node_filesystem_size_bytes{fstype!=\"tmpfs\"} - node_filesystem_free_bytes{fstype!=\"tmpfs\"}) / node_filesystem_size_bytes{fstype!=\"tmpfs\"} * 100", "refId": "A" }],
      "max": 100,
      "min": 0,
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 }
    },

    {
      "type": "row",
      "title": "Containers",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 }
    },
    {
      "type": "timeSeries",
      "title": "Container CPU Usage (mCores)",
      "targets": [{ "expr": "rate(container_cpu_usage_seconds_total{name!=\"\",image!=\"\"}[1m]) * 1000", "refId": "A" }],
      "legend": { "show": true },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 6 }
    },
    {
      "type": "timeSeries",
      "title": "Container Memory Usage (MB)",
      "targets": [{ "expr": "container_memory_usage_bytes{name!=\"\",image!=\"\"} / 1024 / 1024", "refId": "A" }],
      "legend": { "show": true },
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 6 }
    },

    {
      "type": "row",
      "title": "GPU Metrics (DCGM)",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 12 }
    },
    {
      "type": "timeSeries",
      "title": "GPU Utilization (%)",
      "targets": [{ "expr": "DCGM_FI_DEV_GPU_UTIL", "refId": "A" }],
      "legend": { "show": true },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 13 }
    },
    {
      "type": "timeSeries",
      "title": "GPU Memory Used (MiB)",
      "targets": [{ "expr": "DCGM_FI_DEV_FB_USED / 1024 / 1024", "refId": "A" }],
      "legend": { "show": true },
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 13 }
    },

    {
      "type": "timeSeries",
      "title": "GPU Temperature (Â°C)",
      "targets": [{ "expr": "DCGM_FI_DEV_GPU_TEMP", "refId": "A" }],
      "legend": { "show": true },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 19 }
    },
    {
      "type": "timeSeries",
      "title": "GPU Power Draw (W)",
      "targets": [{ "expr": "DCGM_FI_DEV_POWER_USAGE / 1000", "refId": "A" }],
      "legend": { "show": true },
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 19 }
    }
  ],
  "time": { "from": "now-15m", "to": "now" },
  "templating": { "list": [] },
  "annotations": { "list": [] }
}
